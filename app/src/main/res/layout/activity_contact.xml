<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contact" >

    <EditText
        android:id="@+id/txt_objet_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/Hint_message"
        android:inputType="text"
        android:text="Saisir l'objet du message"
        android:textColor="#2B2B2B"
        android:textColorHighlight="#0E0C0C"
        android:textColorHint="@color/black"
        android:textColorLink="#0B0909"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_message_sms"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Entrer votre message"

        android:inputType="text"
         />

    <Button
        android:id="@+id/btn_envoyer"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:text="@string/txt_bouton_envoyer"
        android:textSize="30sp"
        android:textStyle="normal|bold" />
</LinearLayout>